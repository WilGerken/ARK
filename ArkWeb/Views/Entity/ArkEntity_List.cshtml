@model ArkWeb.Models.ArkEntity_EditList_ViewModel
@{
    ViewData["Title"] = "Entity List";
}

<div class="row">
    <div class="col-md-4">
        <h3>@ViewData["Message"]</h3>
    </div>
</div>

<form action="@Url.Action("ArkEntity_List", "Entity")" method="post">
    <div class="row">
        <div class="form-group col-md-4">
            @Html.LabelFor(x => x.ListCriteria.EntityNm, "Entity Name")
            @Html.EditorFor(x => x.ListCriteria.EntityNm, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(x => x.ListCriteria.DescTxt, "Description")
            @Html.EditorFor(x => x.ListCriteria.DescTxt, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(x => x.ListCriteria.TagTxt, "Tags")
            @Html.EditorFor(x => x.ListCriteria.TagTxt, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.ListCriteria.TagTxt, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row text-center">
        <div class="col-md-4 text-left">
            <input type="submit" value="Refresh List" class="btn btn-default" />
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(x => x.ListCriteria.ActiveYn, "Is Active", new { htmlAttributes = new { @class = "control-label col-md-4" } })
            <div class="col-md-8">
                @Html.EditorFor(x => x.ListCriteria.ActiveYn, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="col-md-4 text-right">
            <input type="submit" value="Reset Filter" class="btn btn-default" />
        </div>
    </div>
</form>

<hr />

<div class="row" style="font-weight:700">
    <div class="col-md-4">Name</div>
    <div class="col-md-6">Description</div>
    <div class="col-md-2">Is Active</div>
</div>

@foreach (var item in Model.SimpleListModel)
{
    <div class="row">
        <div class="col-md-4">@Html.ActionLink(item.EntityNm, "ArkEntity_Info", "Entity", new { id = @item.ObjectID })</div>
        <div class="col-md-6">@Html.DisplayFor(x => item.DescTxt)</div>
        <div class="col-md-2">@Html.DisplayFor(x => item.ActiveYn)</div>
    </div>
}
