@model ArkWeb.Models.ArkEntity_EditItem_ViewModel
@{
    ViewData["Title"] = "Entity Info";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h3>@ViewData["Message"]</h3>
        </div>
    </div>
    @Html.HiddenFor(x => x.ModelObject.ObjectID)
    @Html.HiddenFor(x => x.ModelObject.VersionKey)
    <div class="row">
        <div class="form-group col-md-6">
            @Html.LabelFor(x => x.ModelObject.EntityNm, "Entity Name:")
            @Html.DisplayFor(x => x.ModelObject.EntityNm, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-12">
            @Html.LabelFor(x => x.ModelObject.DescTxt, "Description:")
            @Html.DisplayFor(x => x.ModelObject.DescTxt, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-3">
            @Html.LabelFor(x => x.ModelObject.CreateByUid, "Created By:")
            @Html.DisplayFor(x => x.ModelObject.CreateByUid, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(x => x.ModelObject.CreateOnDts, "Created On:")
            @Html.DisplayFor(x => x.ModelObject.CreateOnDts, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-3">
            @Html.LabelFor(x => x.ModelObject.UpdateByUid, "Updated By:")
            @Html.DisplayFor(x => x.ModelObject.UpdateByUid, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(x => x.ModelObject.UpdateOnDts, "Updated On:")
            @Html.DisplayFor(x => x.ModelObject.UpdateOnDts, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(x => x.ModelObject.ActiveYn, "Is Active:")
            @Html.DisplayFor(x => x.ModelObject.ActiveYn, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            @Html.ActionLink("Edit", "ArkEntity_Edit", "Entity", new { id = Model.ModelObject.ObjectID })
        </div>
    </div>
</div>

<hr />
<div id="exTab1" class="container">
    <ul class="nav nav-pills">
        <li class="active">
            <a href="#1a" data-toggle="tab">Tags</a>
        </li>
        <li>
            <a href="#2a" data-toggle="tab">References</a>
        </li>
        <li>
            <a href="#3a" data-toggle="tab">Contacts</a>
        </li>
    </ul>

    <div class="tab-content clearfix" style="padding-top: 20px">
        <div class="tab-pane active" id="1a">
            <div class="row" style="font-weight:700">
                <div class="col-md-6">Tag</div>
                <div class="col-md-6">Type</div>
            </div>

            @foreach (var item in Model.ModelObject.EntityTagList)
            {
                <div class="row">
                    <div class="col-md-6">@Html.DisplayFor(x => item.TagTxt)</div>
                    <div class="col-md-2">@Html.DisplayFor(x => item.TypeTxt)</div>
                </div>
            }
        </div>
        <div class="tab-pane" id="2a">
            <h3>TODO: references tab</h3>
        </div>
        <div class="tab-pane" id="3a">
            <h3>TODO: contacts tab</h3>
        </div>
    </div>
</div>
