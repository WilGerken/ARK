@model ArkWeb.Models.ArkProject_EditItem_ViewModel
@{
    ViewData["Title"] = "Project Edit";
}

<div class="row">
    <div class="col-md-4">
        <h3>@ViewData["Message"]</h3>
    </div>
</div>

<form action="@Url.Action("ArkProject_Save", "Project")" method="post">

    @Html.HiddenFor(x => x.ModelObject.ObjectID)
    @Html.HiddenFor(x => x.ModelObject.VersionKey)

    <div class="row">
        <div class="form-group col-md-4">
            @Html.LabelFor(x => x.ModelObject.ProjectNm, "Project Name:")
            @Html.TextBoxFor(x => x.ModelObject.ProjectNm, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(x => x.ModelObject.ManagerNm, "Manager Name:")
            @Html.TextBoxFor(x => x.ModelObject.ManagerNm, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(x => x.ModelObject.ClientNm, "Client Name:")
            @Html.TextBoxFor(x => x.ModelObject.ClientNm, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-12">
            @Html.LabelFor(x => x.ModelObject.DescTxt, "Description:", new { htmlAttributes = new { @class = "col-md-4" } })
            <div class="col-md-8">
                @Html.TextBoxFor(x => x.ModelObject.DescTxt, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-3">
            @Html.LabelFor(x => x.ModelObject.CreateByNm, "Created By:")
            @Html.DisplayFor(x => x.ModelObject.CreateByNm, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(x => x.ModelObject.CreateOnDts, "Created On:")
            @Html.DisplayFor(x => x.ModelObject.CreateOnDts, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-3">
            @Html.LabelFor(x => x.ModelObject.UpdateByNm, "Updated By:")
            @Html.DisplayFor(x => x.ModelObject.UpdateByNm, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(x => x.ModelObject.UpdateOnDts, "Updated On:")
            @Html.DisplayFor(x => x.ModelObject.UpdateOnDts, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(x => x.ModelObject.ActiveYn, "Is Active:")
            @Html.EditorFor(x => x.ModelObject.ActiveYn, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <input type="submit" value="Save" class="btn btn-default" />
            <button onclick="location.href='@Url.Action("ArkProject_Info", "Project", new { id = Model.ModelObject.ObjectID })';return false;">Cancel</button>
            @Html.ActionLink("Cancel", "ArkProject_Info", "Project", new { id = Model.ModelObject.ObjectID })
        </div>
    </div>
</form>
