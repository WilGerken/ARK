@model ArkWeb.Models.ArkBlog_EditItem_ViewModel
@{
    ViewData["Title"] = "Blog Edit";
}

<div class="row">
    <div class="col-md-4">
        <h3>@ViewData["Message"]</h3>
    </div>
</div>
<form action="@Url.Action("ArkBlog_Save", "Story")" method="post">

    @Html.HiddenFor(x => x.ModelObject.ObjectID)
    @Html.HiddenFor(x => x.ModelObject.VersionKey)

    <div class="row">
        <div class="form-group col-md-6">
            @Html.LabelFor(x => x.ModelObject.TitleTxt, "Blog Title:")
            @Html.TextBoxFor(x => x.ModelObject.TitleTxt, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            @Html.LabelFor(x => x.ModelObject.EntryDts, "Entry Date:")
            @Html.TextBoxFor(x => x.ModelObject.EntryDts, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-12">
            @Html.LabelFor(x => x.ModelObject.NarrativeTxt, "Narrative:")
            @Html.TextAreaFor(x => x.ModelObject.NarrativeTxt, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-3">
            @Html.LabelFor(x => x.ModelObject.CreateByUid, "Created By:")
            @Html.DisplayFor(x => x.ModelObject.CreateByUid, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(x => x.ModelObject.CreateOnDts, "Created On:")
            @Html.DisplayFor(x => x.ModelObject.CreateOnDts, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-3">
            @Html.LabelFor(x => x.ModelObject.UpdateByUid, "Updated By:")
            @Html.DisplayFor(x => x.ModelObject.UpdateByUid, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(x => x.ModelObject.UpdateOnDts, "Updated On:")
            @Html.DisplayFor(x => x.ModelObject.UpdateOnDts, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(x => x.ModelObject.ActiveYn, "Is Active:")
            @Html.EditorFor(x => x.ModelObject.ActiveYn, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <input type="submit" value="Save" class="btn btn-default" />
            @Html.ActionLink("Cancel", "ArkBlog_Info", "Story", new { id = Model.ModelObject.ObjectID })
        </div>
    </div>
</form>
