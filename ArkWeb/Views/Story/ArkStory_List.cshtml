@model ArkWeb.Models.ArkStory_EditList_ViewModel
@{
    ViewData["Title"] = "Story List";
}

<div class="row">
    <div class="col-md-4">
        <h3>@ViewData["Message"]</h3>
    </div>
</div>

<form action="@Url.Action("ArkStory_List", "Story")" method="post">
    <div class="row">
        <div class="form-group col-md-6">
            @Html.LabelFor(x => x.ListCriteria.TitleTxt, "Story Title")
            @Html.EditorFor(x => x.ListCriteria.TitleTxt, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.ListCriteria.TitleTxt, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(x => x.ListCriteria.LocationTxt, "Location")
            @Html.EditorFor(x => x.ListCriteria.LocationTxt, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.ListCriteria.LocationTxt, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row text-center">
        <div class="col-md-4 text-left">
            <input type="submit" value="Refresh List" class="btn btn-default" />
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(x => x.ListCriteria.ActiveYn, "Is Active", new { htmlAttributes = new { @class = "control-label col-md-4" } })
            <div class="col-md-8">
                @Html.EditorFor(x => x.ListCriteria.ActiveYn, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="col-md-4 text-right">
            <input type="submit" value="Reset Filter" class="btn btn-default" />
        </div>
    </div>
</form>

<hr />

<div class="row" style="font-weight:700">
    <div class="col-md-5">Story Title</div>
    <div class="col-md-5">Location</div>
    <div class="col-md-2">Is Active</div>
</div>

@foreach (var item in Model.SimpleListModel)
{
    <div class="row">
        <div class="col-md-5">@Html.ActionLink(item.TitleTxt, "ArkStory_Info", "Story", new { id = @item.ObjectID })</div>
        <div class="col-md-5">@Html.DisplayFor(x => item.LocationTxt)</div>
        <div class="col-md-2">@Html.DisplayFor(x => item.ActiveYn)</div>
    </div>
}
